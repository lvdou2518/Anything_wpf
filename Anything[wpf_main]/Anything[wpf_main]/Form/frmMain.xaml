<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anything_wpf_main_"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Anything_wpf_main_.MainWindow"
        mc:Ignorable="d"
        xmlns:anything="clr-namespace:Anything"
        Title="Anything" Height="650" Width="350" AllowsTransparency="True" Opacity="0.97"  WindowStyle="None" Background="#00fefefe" 
        Loaded="Window_Loaded"   WindowStartupLocation="Manual" Left="700" Top="200">

    <Border x:Name="bdrMain">
            
            <Border Background="#ffFEFEFE" BorderThickness="2" CornerRadius="10">
                <Border x:Name="bdrMainForm" Background="#ff282828"
                        BorderThickness="2" CornerRadius="9" 
                        AllowDrop="True"
                        DragEnter="bdrMainForm_DragEnter"
                        Drop="bdrMainForm_Drop">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--第一层功能区-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">
                            <Button x:Name="btnMin" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Click="btnMin_Click">
                            <Line X1="1" Y1="17" X2="12" Y2="17" Stroke="#FFAAAAAA" StrokeThickness="2"/>
                        </Button>
                        <Button x:Name="btnMax" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Click="btnMax_Click">
                            <Border BorderThickness="2" Width="15" Height="15" Background="#ffAAAAAA">
                                    <Border BorderThickness="1" Width="10" Height="10" Background="#aa282828"/>
                                </Border>
                            </Button>
                        <Button x:Name="btnClose" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Click="btnClose_Click" MouseLeave="btnClose_MouseLeave">
                            <Grid>
                                    <Line X1="1" X2="10" Y1="1" Y2="10" Stroke="#FFAAAAAA"  StrokeThickness="2"/>
                                    <Line X1="1" X2="10" Y1="1" Y2="10" Stroke="#FFAAAAAA"  StrokeThickness="2" RenderTransformOrigin="0.5,0.5">
                                        <Line.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="90"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Line.RenderTransform>
                                    </Line>

                                </Grid>

                            </Button>
                        </StackPanel>
                        <!--第一层功能区完-->

                        <!--第二层关键字检索区-->
                        <StackPanel Grid.Row="1">
                            <!--Background="#FF505050"-->
                            <TextBox x:Name="txtMain" Background="#FF505050" Margin="10,0,10,0" MinHeight="25" TextAlignment="Center" FontSize="17" Foreground="#FFEEEEEE" Text="cdscs" >

                            </TextBox>
                        </StackPanel>
                        <!--第二层关键字检索区完-->

                        <!--第三层常用项目区-->
                        <StackPanel Grid.Row="2" Margin="5" >
                        <ListBox x:Name="lstImgs">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Image Width="100" Height="30" Source="{Binding Path=FullPath}">

                                    </Image>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </StackPanel>
                        <!--第三层常用项目区完-->

                        <!--第四层常规项目区-->
                        <StackPanel Grid.Row="3">
                        <local:Item x:Name="imgs">
                            
                        </local:Item>
                        </StackPanel>
                        <!--第四层常规项目区完-->
                    </Grid>

                </Border>
            </Border>

        </Border>

    <Window.Resources>
        <DataTemplate x:Key="dt">
            <StackPanel>
                <Image x:Name="img"></Image>
                <TextBlock x:Name="txt"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
</Window>
